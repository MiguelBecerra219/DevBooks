---
import { ClientRouter } from 'astro:transitions';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<ClientRouter/>
	</head>
	<body>
		<div>
			<slot />
		</div>
	</body>
</html>

<style>
	html {
		background: #13151a;
		color: white;
	}

	body {
		@apply grid place-content-center;
		padding: 80px;
	}

	body > div {
		@apply container;
	}
</style>
